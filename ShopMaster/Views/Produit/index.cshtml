@model List<Produit>
@{
    ViewData["Title"] = "Liste des Produits";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a href="@Url.Action("Create", "Product")" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>
            Ajouter Produit
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th >#</th>
                        <th >Nom</th>
                        <th >Marque</th>
                        <th >Quantite</th>
                        <th>Prix</th>
                        <th >Description</th>
                        <th >Image</th>
                        <th >Date Création</th>
                        <th >Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Nom</td>
                            <td>@product.Marque</td>
                            <td>@product.qte</td>
                            <td>@product.Prix.ToString("C")</td>
                            <td>@product.Description</td>
                            <td>
                                <img src="~/product/@product.ImageUrl"
                                     alt="@product.Nom"
                                     width="80"
                                     class="img-thumbnail" />
                            </td>
                            <td>@product.DateCreation.ToString("dd/MM/yyyy")</td>
                            <td style="white-space:nowrap">
                                <a href="@Url.Action("Details", "Product", new { id = product.Id })"
                                   class="btn btn-sm btn-info me-1">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", "Product", new { id = product.Id })"
                                   class="btn btn-sm btn-warning me-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Product", new { id = product.Id })"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Statistiques simples -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Count</h5>
                        <p class="card-text">Total Produits</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading">Aucun produit disponible</h4>
            <p>Commencez par ajouter votre premier produit.</p>
            <hr>
            <a href="@Url.Action("Create", "Product")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                Ajouter un Produit
            </a>
        </div>
    }
</div>